# Switche

- hosts: {{ inventory-hostname }}
  name: TOR
  become: yes
  gather_facts: no
  tasks:
    - name: copy eni
      copy: 
        src: /home/cumulus/ON-15/step-06/{{ inventory-hostname }}-if
        dest: /etc/network/interfaces
    - name: activate changes on leaf01
      shell: /sbin/ifreload -a     

    - name: copy frr
      copy:
        src: /home/cumulus/ON-15/step-06/{{ inventory-hostname }}-frr
        dest: /etc/frr/frr.conf
    - name: reload frr
      ansible.builtin.shell: systemctl reload frr
      
