# Leaf01 

- hosts: leaf01
  name: Leaf01 interfaces and routing
  become: yes
  gather_facts: no
  tasks:
    - name: copy eni
      copy: 
        src: /home/cumulus/ON-15/step-05/leaf01-if-mh
        dest: /etc/network/interfaces
    - name: activate changes on leaf01
      shell: /sbin/ifreload -a     

    - name: copy frr
      copy:
        src: /home/cumulus/ON-15/step-05/leaf01-frr-mh
        dest: /etc/frr/frr.conf
    - name: reload frr
      ansible.builtin.shell: systemctl reload frr
