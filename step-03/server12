---
- hosts: server11
  name: create bond, set loopback and activate changes
  become: yes
  gather_facts: no
  tasks:
    - name: e/n/i file and interface manager activation
      copy:
        src: /home/cumulus/ON-15/inventory/files/server11
        dest: /etc/network/interfaces
    # ifreload
    - name: activate changes for Server11
      shell: /sbin/ifreload -a
      
    # fix until bridge binding is fixed
    - name: 
      shell: ip link {{ item }}
      with_items:
      - add uplink name uplink.10 type vlan id 10
      - set up uplink.10
      shell: ip link set up uplink.10
      shell: ip link {{ item }}
      with_items:
      - add uplink name uplink.20 type vlan id 20
      - set up uplink.20
      shell: ip link set up uplink.20
