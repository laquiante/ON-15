---
- hosts: leaf01
  name: push yaml file and activate
  become: yes
  gather_facts: no
  tasks:
    - name: yaml file
      copy:
        src: /home/cumulus/ON-15/inventory/files/leaf01-after-step04
        dest: /etc/nvue.d/startup.yaml
    # activate yaml
    - name: activate Leaf01
      shell: nv config apply startup -y
      
    - name: yaml file
      copy:
        src: /home/cumulus/ON-15/inventory/files/leaf01-snippet-step04
        dest: /etc/nvue.d/snipped.yaml
    - name: patch snippet
      shell: nv config patch /etc/nvue.d/snipped.yaml
    # ifreload
    - name: activate config
      shell: nv config apply startup -y
